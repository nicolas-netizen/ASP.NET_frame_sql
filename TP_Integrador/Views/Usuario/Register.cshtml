@{
    ViewData["Title"] = "Register";
}

<section class="vh-100" style="background-color: #1111;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <div class="text-center">
                                    <h1 class="h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Register</h1>
                                </div>
                                <form class="mx-1 mx-md-4" action=@Url.Action("AddNewUsuario", "Usuario")>
                                    <div class="mb-4">
                                        <label for="nombreUsuario" class="form-label">Nombre de usuario</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                            <input type="text" id="nombreUsuario" name="nombreUsuario" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="mb-4">
                                        <label for="email" class="form-label">Email</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                            <input type="email" id="email" name="email" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="mb-4">
                                        <label for="contraseña" class="form-label">Contraseña</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                            <input type="password" id="contraseña" name="contraseña" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="mb-4">
                                        <label for="tipo" class="form-label">Tipo</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-users"></i></span>
                                            <select name="tipo" id="tipo" class="form-select">
                                                <option value="1">Cliente</option>
                                                <option value="2">Vendedor</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center">
                                        <button type="submit" class="btn btn-primary btn-lg">Registrarse</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
